<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootpane" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Booking_Interface.FXMLDocumentController">
   <children>
      <Pane id="AnchorPane">
         <children>
            <ImageView fx:id="main" fitHeight="700.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Home.jpg" />
               </image>
            </ImageView>
            <Button fx:id="skip" layoutX="1092.0" layoutY="602.0" mnemonicParsing="false" onAction="#Onskip" prefHeight="45.0" prefWidth="160.0" text="Exit" textFill="#1c7eba">
               <font>
                  <Font name="Cambria" size="24.0" />
               </font>
            </Button>
            <Button fx:id="register" layoutX="1003.0" layoutY="195.0" mnemonicParsing="false" onAction="#OnRegister" prefHeight="52.0" prefWidth="160.0" text="Register" textFill="#1c7eba">
               <font>
                  <Font name="Cambria Math" size="27.0" />
               </font>
            </Button>
            <Button fx:id="login" layoutX="819.0" layoutY="195.0" mnemonicParsing="false" onAction="#OnLogin" prefHeight="52.0" prefWidth="149.0" text="Login" textFill="#1c7eba">
               <font>
                  <Font name="Cambria Math" size="27.0" />
               </font>
            </Button>
            <Button fx:id="welcome" layoutX="819.0" layoutY="71.0" mnemonicParsing="false" onAction="#OnWelcome" prefHeight="68.0" prefWidth="340.0" text="Welcome as Guest" textFill="#1c7eba">
               <font>
                  <Font name="Cambria" size="36.0" />
               </font>
            </Button>
            <Button fx:id="admin" layoutX="745.0" layoutY="602.0" mnemonicParsing="false" onAction="#onAdmin" prefHeight="45.0" prefWidth="160.0" text="Admin" textFill="#1c7eba">
               <font>
                  <Font name="Cambria" size="24.0" />
               </font>
            </Button>
            <RadioButton fx:id="ab" layoutX="55.0" layoutY="35.0" mnemonicParsing="false" onAction="#onSelect" text="Albanian" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="en" layoutX="55.0" layoutY="71.0" mnemonicParsing="false" onAction="#onSelect" text="English" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </RadioButton>
            
         </children>
      </Pane>
   </children>
</AnchorPane>

